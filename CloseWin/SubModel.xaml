<UserControl x:Class="CloseWin.SubModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CloseWin"
             xmlns:vm="clr-namespace:CloseWin.Core;assembly=CloseWin.Core"
             d:DataContext="{x:Static vm:Test.subModelDesignVm}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Margin="8" Text="{Binding Text}"></TextBlock>
            <TextBlock Margin="8" Text="{Binding StatusMsg}"></TextBlock>
            <Button Width="120" Command="{Binding Random}"
                Height="60" Content="Random" FontSize="16" FontWeight="Bold"/>

            <Button Width="120" Command="{Binding Load}" Margin="8"
                Height="60" Content="Load" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
